<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acizi carboxilici"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#7947c4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/home_text"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- PROPRIETATI COMUNE CU ALE ACIZILOR ANORGANICI -->
                <TextView
                    android:id="@+id/comune"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I. PROPRIETĂȚI COMUNE CU ALE ACIZILOR ANORGANICI"
                    android:textStyle="bold"
                    android:textSize="23sp"/>

                <!-- Ionizare -->
                <TextView
                    android:id="@+id/ionizare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      1. Ionizarea în soluție apoasă"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/ionizare_acizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ionizare_acizi"/>

                <!-- Eliberarea acizilor mai slabi din sărurile lor -->
                <TextView
                    android:id="@+id/eliberarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      2. Eliberarea acizilor mai slabi din sărurile lor"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/eliberare_acizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/eliberare_acizi"/>

                <!-- REACTII CARACTERISTICE ACIZILOR CARBOXILICI -->
                <TextView
                    android:id="@+id/caracteristice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="II. REACȚII CARACTERISTICE ACIZILOR CARBOXILICI"
                    android:textStyle="bold"
                    android:textSize="23sp"/>

                <!-- Esterificarea -->
                <TextView
                    android:id="@+id/esterificarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      1. Esterificarea"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/esterificare_acizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/esterificare_acizi"/>

                <!-- Reactia cu amoniacul -->
                <TextView
                    android:id="@+id/amoniacul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      2. Reacția cu amoniacul"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/amoniac_acizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/amoniac_acizi"/>

                <ImageView
                    android:id="@+id/amoniu_acizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/amoniu_acizi"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</ScrollView>
