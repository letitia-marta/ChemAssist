<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arene (Compuși aromatici)"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#7947c4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/home_text"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- REACTII LA NUCLEU -->
                <TextView
                    android:id="@+id/nucleu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I. REACȚII LA NUCLEU"
                    android:textStyle="bold"
                    android:textSize="23sp"/>

                <!-- Substitutie -->
                <TextView
                    android:id="@+id/substitutie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      1. Reacții de substituție"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/benzen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="                  a) Substituția la benzen"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/substitutie_benzen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/substitutie_benzen"/>

                <ImageView
                    android:id="@+id/etilbenzen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/etilbenzen"/>

                <TextView
                    android:id="@+id/naftalina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="                  b) Substituția la naftalină"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/naftalensulfonic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/naftalensulfonic"/>

                <ImageView
                    android:id="@+id/nitronaftalina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/nitronaftalina"/>

                <!-- Adiție -->
                <TextView
                    android:id="@+id/aditie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      2. Reacții de adiție"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/aditie_naftalina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/aditie_naftalina"/>

                <!-- Oxidare -->
                <TextView
                    android:id="@+id/oxidare_nucleu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      3. Reacții de oxidare"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/oxidare_naftalina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/oxidare_naftalina"/>

                <ImageView
                    android:id="@+id/oxidare_antracen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/oxidare_antracen"/>

                <!-- REACTII LA CATENA LATERALA -->
                <TextView
                    android:id="@+id/catena_laterala"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="II. REACȚII LA CATENA LATERALĂ"
                    android:textStyle="bold"
                    android:textSize="23sp"/>

                <!-- Clorurare -->
                <TextView
                    android:id="@+id/clorurare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      1. Clorurare"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/clorurare_toluen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/clorurare_toluen"/>

                <!-- Oxidare -->
                <TextView
                    android:id="@+id/oxidare_lat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      2. Oxidare"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/oxidare_toluen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/oxidare_toluen"/>

                <ImageView
                    android:id="@+id/oxidare_xilen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/oxidare_xilen"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</ScrollView>
